[user]
	name = Adam Haymond
	email = adam@masteryconnect.com
[core]
	excludesfile = /Users/archer/.gitignore_global
	editor = subl -n -w
[color]
	status = auto
	branch = auto
	diff = auto
[alias]
	st = status
	ss = status -s
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	fu = fetch upstream
	fo = fetch origin
	who = shortlog -s --
	com = commit -m
	pod = push origin develop
	redevop = rebase upstream/develop

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
